<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0FFFF"
    tools:context=".view.GroupChatActivity">

    <!-- Bar phía trên (ll1) giữ nguyên -->
    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:background="#BDEDFF"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/turnback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/back1"
            android:contentDescription="Back button" />

        <TextView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spartan_bold"
            android:text="Setting"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Nhập tên nhóm -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/edit_group_layout"
        android:layout_marginTop="109dp"
        android:layout_alignParentTop="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <EditText
            android:id="@+id/edit_group_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter group name"
            android:visibility="gone"
            android:imeOptions="actionDone"
            android:background="#00BCD4"
            android:fontFamily="@font/spartan_bold"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/recivername"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/spartan_bold"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/editname"
            android:layout_width="29dp"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edit_pen"
            android:contentDescription="Edit group name" />
    </LinearLayout>

    <!-- Thành viên nhóm -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginTop="174dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/nextgrmember"
        android:layout_alignParentTop="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/spartan_bold"
            android:text="Group members"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <ImageButton
            android:layout_width="29dp"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/next"
            android:contentDescription="Next button" />
    </LinearLayout>

    <!-- Thoát nhóm -->
    <LinearLayout
        android:id="@+id/outgroup"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:background="#E21300"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/spartan_bold"
            android:text="Out group"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/exit"
            android:contentDescription="Exit button" />
    </LinearLayout>

    <!-- Xóa nhóm -->
    <LinearLayout
        android:id="@+id/deletegroup"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="84dp"
        android:background="#AD3C34"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/spartan_bold"
            android:text="Delete group"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageButton
            android:layout_gravity="center_vertical"
            android:layout_width="29dp"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/delete"
            android:contentDescription="Exit button" />
    </LinearLayout>

</RelativeLayout>
